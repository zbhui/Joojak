# 全局变量
[GlobalParams]
 	order = FOURTH
 	family = MONOMIAL
  	
 	mach = 0.1
 	reynolds = 10.0
  	
 	variables = 'rho momentum_x momentum_y momentum_z rhoe'
	use_displaced_mesh = true
[]

# 网格
[Mesh]
  type = GeneratedMesh
  dim = 2
  
  nx = 10
  ny = 10  
  
  xmin = -10
  xmax = 0

  ymin = -10
  ymax = 0
  
  uniform_refine = 0
  second_order = false
  
  block_id = '0'
  block_name = 'fluid'

	#displacements = 'disppp_x disppp_y'
[]

# 变量
