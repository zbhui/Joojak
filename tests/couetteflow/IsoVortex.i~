# 边界条件
[BCs]
	[./multi_bc]
		type = IsoVortexBC
		variable = rho
		boundary = 'left right bottom top'
	[../]			
[]

# The Preconditioning block
[Preconditioning]
  [./SMP_jfnk_full]
    type = SMP

    full = true

    petsc_options_iname = '-pc_type'
    petsc_options_value = 'bjacobi'
  [../]
[]


# 非线性系统求解
[Executioner]

  type = Transient
  solve_type = PJFNK
 	scheme = 'bdf2'
  dt = 0.05
  num_steps = 100
  
  # 线性迭代步的残差下降（相对）量级
 	l_tol = 1e-2
	# l_abs_step_tol = -1e-04
  # 最大线性迭代步	
 	l_max_its = 10
 	
 	# 最大非线性迭代步
 	nl_max_its = 10
 	# 非线性迭代的残值下降（相对）量级
 	nl_rel_tol = 1e-03
 	# 非线性迭代绝对残值
 	#nl_abs_tol = 1e-05
  	
	#abort_on_solve_fail = true	
  #end_time = 0.1
  
[]

[Functions]
  [./exact_rho]
    type = IsoVortexExact
  [../]
[]

[Postprocessors]
  [./l2_err]
    type = ElementL2Error
    variable = rho
    function = exact_rho
  [../]
[]

